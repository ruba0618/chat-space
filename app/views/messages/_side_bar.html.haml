.side_bar
  .side_bar__score_header
    .name
      = current_user.name
    .list
      .list__edit
        = link_to new_group_path ,class: "icon" do
          = icon('fas', 'edit')
      .list__setting 
        = link_to edit_user_path(current_user),class:"icon" do
          = icon('fas', 'cog')

  .side_bar__group 
    - current_user.groups.each do |group|
      .user
        = link_to group_messages_path(group) do
          .user__name 
            = group.name
          .user__message 
            = group.show_last_message
